@using PagedList;
@using PagedList.Mvc;
@model IEnumerable <miniMVC.Models.ArticleModel>
@{
    
    Layout = "~/Views/Shared/_MyLayoutPage.cshtml";
    var data = Model as IPagedList<miniMVC.Models.ArticleModel>;
}
<link rel="stylesheet" href="~/Content/PagedList.css">
<h2>@ViewBag.TagName</h2>

@foreach (var a in data)
{
    <a href="~/Article/Index/@a.Id">
        <div class="row">
            <div class="col-2">@a.Name</div>

            <div class="col-7">@a.Title</div>

            <div class="col-3">@a.Time</div>
        </div>
    </a>
    <hr />
}

PageList
@Html.PagedListPager(list: data, generatePageUrl: page => Url.Action("Index", new { page = page}))



